{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["ES2022", "DOM"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./lib/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": [
    "api/**/*",
    "lib/**/*",
    "types/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".vercel"
  ]
}